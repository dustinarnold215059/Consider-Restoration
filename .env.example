# Environment Configuration Template
# Copy this to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Server Configuration
NODE_ENV=development
PORT=3050
HOST=localhost

# Database Configuration (PostgreSQL for production, SQLite for development)
DATABASE_URL=sqlite:./dev-database.sqlite
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Security Keys (Generate new secure values!)
SESSION_SECRET=GENERATE_SECURE_32_CHAR_SECRET_HERE
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_HERE
ENCRYPTION_KEY=GENERATE_SECURE_ENCRYPTION_KEY_HERE

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Admin Configuration
ADMIN_SETUP_TOKEN=GENERATE_SECURE_ADMIN_SETUP_TOKEN

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=15

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3050,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Development Settings (disable in production)
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_PROFILING=false